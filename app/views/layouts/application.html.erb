<%= render "layouts/header_app" %>
<!-- Main content -->

<div class="row">
  
</div>
<% if content_for?(:page_header) %>
    <div class="page-header">
      <%= yield(:page_header) %>
      <div class="large-12 columns">
    <% flash.each do |name, msg| %>
        <div data-alert class="alert-box <%= name %> radius">
          <span><%= msg %></span>
          <a href="#" class="close">&times;</a>
        </div>
    <% end %>
  </div>
    </div>
<% end %>
<div class="row" id="interface">
  <div class="large-9 columns">
    <% if logged_in? %>
        <%= render "layouts/app_menu" %>
    <% end %>
    <%= yield %>
  </div>
  <% if logged_in? %>
      <%= render "layouts/sidebar" %>
  <% end %>
</div>
<%= render "layouts/footer_app" %>
